<div class="blog-container">
    <div class="blog-title">
        <h5>Edit Blog</h5>
    </div>
    <form class="login-text login-form">
        <div class="mb-3">
            <label for="blog-title" class="form-label">Title</label>
            <input name="blog-title" type="text" value="{{blog.title}}" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label" for="content">Content</label>
            <input name="content" type="text" value="{{blog.content}}" class="form-control" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-success">Update Blog</button>
        </div>
        <button type="button" class="delete-blog-btn btn btn-danger">Delete Blog</button>
    </form>
</div>

<script src="/js/editBlog.js"></script>
<script src="/js/deleteBlog.js"></script>